<% include ../partials/header %>

<div class="ui raised padded text container segment">
    <div class="row">
        <h1 style="text-align: center">Editar Información de Hospital</h1>
        <form action="/facilities/<%= hospital._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="name">Nombre de la Entidad</label>
            <input type="text" class="form-control" name="hospital[name]" id="name" value="<%= hospital.name%>">
          </div>
          <div class="form-group">
            <label for="capacity">Capacidad de Camas en Urgencias</label>
            <input type="text" class="form-control" name="hospital[capacity]" id="capacity" value="<%= hospital.capacity%>">
          </div>
          <div class="form-group">
            <label for="address">Dirección</label>
            <input type="text" class="form-control" name="hospital[address]" id="address" value="<%= hospital.address%>">
          </div>
          <div class="form-group">
            <label for="logo">Link del logo de la Entidad</label>
            <input type="text" class="form-control" name="hospital[logo]" id="logo" value="<%= hospital.logo%>">
          </div>
          <div class="form-group">
            <label for="wait">Tiempo Estimado de Espera (min)</label>
            <input type="text" class="form-control" name="hospital[wait]" id="wait" value="<%= hospital.wait%>">
          </div>
          <button type="submit" class="ui positive basic button">Editar</button>
        </form>
        <form id="delete" action="/facilities/<%= hospital._id%>?_method=DELETE" method="POST">
            <button type="submit" class="ui right floated negative basic button">Eliminar</button>
        </form>
    </div>
</div>


<% include ../partials/footer %>