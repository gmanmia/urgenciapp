<% include ../partials/header %>

<div class="ui container text segment">
    <div class="ui form">
        <h3 class="ui dividing header">Editar el perfil de <em><%= user.username%></em></h3>
        <form class="ui form" action="/users/<%=user._id%>/edit?_method=PUT" method="POST">
            <div class="field">
                <label>Nombre y Apellido</label>
                <div class="two fields">
                    <div class="field">
                        <input type="text" name="updatedInfo[firstName]" value="<%=user.firstName%>">    
                    </div>
                    <div class="field">
                        <input type="text" name="updatedInfo[lastName]" value="<%=user.lastName%>">
                    </div>
                </div>
            </div>
            <div class="field">
                <label>Email y URL Foto</label>
                <div class="two fields">
                    <div class="field">
                        <input type="text" name="updatedInfo[email]" value="<%=user.email%>">
                    </div>
                    <div class="field">
                        <input type="text" name="updatedInfo[avatar]" value="<%=user.avatar%>">
                    </div>
                </div>
            </div>
            <div class="field">
                <label>Acerca De</label>
                <input type="text" name="updatedInfo[about]" value="<%=user.about%>">
            </div>
            <button class="ui positive basic button tiny" type="submit">Actualizar</button>
    
        </form>
        <br><button href="/users/<%=user._id%>" class="ui negative basic button tiny right">Cancelar</button>
    </div>

</div>

<% include ../partials/footer %>