<% include ../partials/header %>

<div class="ui raised padded text container segment">
    <div class="row">
        <h1 style="text-align: center">Editar Comentario</h1>
        <form action="/facilities/<%=facility_id%>/report/<%= report._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="triageLevel">Nivel de Triage Asignado</label>
            <input type="number" class="form-control" name="report[triageLevel]" id="triageLevel" value="<%= report.triageLevel%>">
          </div>
          <div class="form-group">
            <label for="arrivalTime">Hora de Llegada a Urgencias</label>
            <input type="time" class="form-control" name="report[arrivalTime]" id="arrivalTime" value="<%= report.arrivalTime%>">
          </div>
          <div class="form-group">
            <label for="seenTime">Hora de evaluación médica</label>
            <input type="time" class="form-control" name="report[seenTime]" id="seenTime" value="<%= report.seenTime%>">
          </div>
          <div class="form-group">
            <label for="comments">Comentarios de la visita</label>
            <input type="text" class="form-control" name="report[comments]" id="comments" value="<%= report.comments%>">
          </div>
          <button class="ui primary button" type="submit">Editar</button>
        </form>
        <a class="ui basic button" href="/facilities/<%=facility_id%>">Cancelar</a>
    </div>
</div>


<% include ../partials/footer %>