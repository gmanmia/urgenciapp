<% include partials/header %>

<div class="ui raised padded text container segment">
    <h2 class="ui header">
      <i class="snowflake icon"></i>
      <div class="content">
        RESTful routes
      </div>
    </h2>        
    
    <table class="ui selectable celled striped blue table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Path</th>
          <th>HTTP Verb</th>
          <th>Notes</th>
          <th>Mongoose Method</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>INDEX</td>
          <td>/blogs</td>
          <td>GET</td>
          <td>List all items in the db</td>
          <td>Blog.find()</td>
        </tr>
        <tr>
          <td>NEW</td>
          <td>/blogs/new</td>
          <td>GET</td>
          <td>List a form to enter data</td>
